<h2>Sign up</h2>
<div class="row mt-3">
  <div class="offset-4 col-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :お名前, class: "brown-border px-3" %>
            <div class="row">
              <%= f.text_field :last_name, placeholder:"令和", class: "form-control offset-1 col-5" %>
              <%= f.text_field :first_name,placeholder:"道子", class: "form-control offset-1 col-5" %>
            </div>

          <%= f.label :フリガナ, class: "brown-border px-3" %>
            <div class="row">
              <%= f.text_field :last_name_kana, placeholder:"レイワ", class: "form-control offset-1 col-5" %>
              <%= f.text_field :first_name_kana, placeholder:"ミチコ", class: "form-control offset-1 col-5" %>
            </div>
        </div>

        <div class="form-group">
          <%= f.label :メールアドレス, class: "brown-border px-3" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com", class: "form-control offset-1 col-11" %>
        </div>

        <div class="form-group">
          <%= f.label :郵便番号（ハイフンなし）, class: "brown-border px-3" %>
          <%= f.text_field :postal_code, placeholder:"0000000", class: "form-control offset-1 col-11" %>
        </div>

        <div class="form-group">
          <%= f.label :住所, class: "brown-border px-3" %>
          <%= f.text_field :address, class: "form-control offset-1 col-11" %>
        </div>

        <div class="form-group">
          <%= f.label :電話番号（ハイフンなし）, class: "brown-border px-3" %>
          <%= f.text_field :telephone_number, placeholder:"0000000000", class: "form-control offset-1 col-11" %>
        </div>
        
        <div class="form-group">
          <%= f.label :パスワード（６文字以上）, class: "brown-border px-3" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control offset-1 col-11" %>
        </div>

        <div class="form-group">
          <%= f.label :パスワード（確認用）, class: "brown-border px-3" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control offset-1 col-11" %>
        </div>

        <div class="actions">
          <%= f.submit "会員登録", class: "btn btn-lg btn-danger mx-auto" %>
        </div>
    <% end %>

  </div>
</div>

  <div class="row">
    <div class="offset-9">
      <%= link_to "会員の方はこちらからログイン", new_session_path(resource_name), class: "btn btn-sm btn-outline-danger" %>
    </div>
  </div>

<%= render "customers/shared/links" %>
