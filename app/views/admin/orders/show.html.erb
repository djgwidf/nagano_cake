<div class="container my-5">
  <div class="row">
    <h2>注文詳細</h2>
  </div>
  <div class="row mt-3">
    <div class="col-sm-9">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>購入者</td>
            <td>
              <%= link_to admin_customer_path(@order.customer) do %>
              <%= @order.customer.last_name %>
              <%= @order.customer.first_name %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td>配送先</td>
            <td>〒<%= @order.postal_code %> <%= @order.address %><br><%= @order.name %></td>
          </tr>
          <tr>
            <td>支払方法</td>
            <td><%= @order.payment_method %></td>
          </tr>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-sm-9">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <% @order_details.each do |order_detail| %>
          <tbody>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= (order_detail.unit_price * 1.1).floor %></td>
              <td><%= order_detail.amount %></td>
              <td><%= (order_detail.unit_price * order_detail.amount * 1.1).floor %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
    <div class="col-sm-3 d-flex">
      <table class="table table-borderless align-self-end">
        <tbody>
          <tr class="border-bottom border-dark">
            <td>商品合計</td>
            <td><%= @items_total_price %></td>
          </tr>
          <tr class="border-bottom border-dark">
            <td>送料</td>
            <td><%= @order.postage %></td>
          </tr>
          <tr class="border-bottom border-dark">
            <td>請求合計金額</td>
            <td><%= @order.price + @order.postage %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>