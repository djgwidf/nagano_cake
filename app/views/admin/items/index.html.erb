
<div class= "container my-5">
  <div class= "row">
    <h2>商品一覧画面</h2>
  </div>
  <div class= "row text-right">
    <%= link_to "+", new_admin_item_path, class: "btn btn-lg rounded-circle text-right ml-auto shadow-sm" %>
  </div>

  <div class= "row mt-1">
    <table class= "table table-hover text-center">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item) %></td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
        　<td><% if item.is_active == true %>
              <div class= "bg-info d-inline text-white p-1 ml-3 rounded">
                    販売中
              </div>
              <% else %>
              <div class= "bg-warning d-inline text-white p-1 ml-3 rounded">
                    販売停止中
              <% end %>
              </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
