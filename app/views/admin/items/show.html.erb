<h2>items#show</h2>
<div class= "container my-5">
  <div class= "row">
    <h2>商品詳細</h2>
  </div>

  <div class= "row mt-3">
      <div class= "offset-sm-1 col-sm-3">
          <% attachment_image_tag @item, :image, :fill, 200, 200, format: "jpeg", fallback: 'noimage.jpg', size: '200x200' %>
      </div>
  </div>

  <div class="col-sm-4">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>

          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>

          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>

          <tr>
            <td>税込価格(税抜価格)</td>
            <td>
              <%= @item.price %>(<%= (@item.price * 1.1).floor %>)円
            </td>
          </tr>

          <tr>
            <td>販売ステータス</td>
            <td><% if @item.is_active == true %>
                <div class= "bg-info d-inline text-white p-1 ml-3 rounded">
                    販売中
                </div>
                <% else %>
                <div class= "bg-warning d-inline text-white p-1 ml-3 rounded">
                    販売停止中
                <% end %>
               </div>
          </tr>
        </tbody>

      </table>
    </div>
  </div>

  <div class="row">
    <div class="offset-sm-9 col-sm-2">
      <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-primary" %>
    </div>
  </div>
</div>