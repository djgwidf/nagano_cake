<div class= "container my-5">
  <div class= "row">
    <h2>商品編集</h2>
  </div>
    <div class= "row d-flex justify-content-center">
        <% if flash[:item_updated_error] %>
         <span class "text-danger"><%= flash[:item_updated_error] %></span>
        <% end %>
    </div>
　　<%= form_with model: @item, url: admin_item_path, local: true do |f| %>
    <div class= "row mt-3">
        <div class= "col-sm-3">
            <%= f.label :商品画像 %>
            <%= f.attachment_field :image %>
        </div>
    </div>
    <div class="col-sm-5">
        <div class="form-group row">
          <%= f.label :商品名, class: "col-sm-4" %>
          <%= f.text_field :name, class: "form-control col-sm-8" %>
        </div>
        <div class="form-group row">
          <%= f.label :商品説明, class: "col-sm-4" %>
          <%= f.text_area :introduction, class: "form-control col-sm-8" %>
        </div>
        <div class="form-group row">
          <%= f.label :ジャンル, class: "col-sm-4" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, class: "form-control col-sm-8" %>
        </div>
        <div class="form-group row">
          <%= f.label :税抜き価格, class: "col-sm-4" %>
          <%= f.text_field :price, class: "form-control col-sm-7" %>
          <span class="mt-auto ml-3">円</span>
        </div>
        <div class="form-group row">
          <%= f.label :販売ステータス, class: "col-sm-4" %>
            <div class="form-check ml-4">
                <%= f.radio_button :is_active, true %>
                <%= f.label :is_active, "販売中", value: true %>
                <%= f.radio_button :is_active, false %>
                <%= f.label :is_active, "販売停止中", value: false %>
            </div>
      </div>
      <div class="col-sm-3 mt-auto ml-5">
        <%= f.submit :編集する, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

</div>