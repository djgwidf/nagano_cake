<h2>customers#index</h2>
<div class="container my-5">
  <div class="row">
    <h2>会員情報一覧</h2>
  </div>

  <div class="row mt-3">
    <div class="offset-sm-1 col-sm-10">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to admin_customer_path(customer) do %>
                  <%= customer.last_name %>
                  <%= customer.first_name %>
                  <% end %>
              </td>
              <td><%= customer.email %></td>

              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>